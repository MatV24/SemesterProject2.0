<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table class="table table-bordered table-sm, table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.Name %></td>
        <td><%= course.Number %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>
<%= link_to_unless_current 'New Course', new_course_path %>


<br>

<br>
<h3>Import Data</h3>
<%=form_tag import_courses_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "import CSV" %>
<%end %>

<%= link_to 'CSV Upload format', "/CourseTemplate3.csv", :target => "_blank" %>

