<p id="notice"><%= notice %></p>

<h1>Criterions</h1>
<table class="table table-bordered table-sm, table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @criterions.each do |criterion| %>
      <tr>
        <td><%= criterion.Title %></td>
        <td><%= criterion.Description %></td>
        <td><%= link_to 'Show', criterion %></td>
        <td><%= link_to 'Edit', edit_criterion_path(criterion) %></td>
        <td><%= link_to 'Destroy', criterion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

