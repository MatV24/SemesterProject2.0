<!DOCTYPE html>
<html>
  <head>
    <title>SemesterProject20</title>


    <nav class="navbar navbar-expand-lg navbar-light bg-light ">
      <a class="navbar-brand" >Semester Project</a>

        <ul class="nav nav-pills">

          <li class="nav-item active">
            <a class="nav-link" href=<%=courses_path%>>Courses <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href= <%=criterions_path%>>Criteria</a>
          </li>

          <li class="nav-item active">
            <a class="nav-link" href= <%=faculties_path%>> Faculty </a>
          </li>

          <li class="nav-item active" >
            <a class="nav-link" href= <%=coursecriterions_path%>> Course Criteria </a>
          </li>


          <li class="nav-item active">
            <a class="nav-link" href= <%=coursefaculties_path %>> Course Faculty </a>
          </li>

          <li class="nav-item active">
            <a class="nav-link" href= <%=courseevaluations_path%>> Course Evaluations </a>
          </li>
          <li class="nav-item">
            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Report</a>
          </li>

        </ul>
      </div>

    </nav>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body>



  <section>

    <div id="flash">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>

    <%= yield %>
  </section>
  <footer>
    <% if signed_in? %>
      Signed in as: <%= current_user.email %>
      <%= button_to 'Sign out', sign_out_path, method: :delete %>
    <% else %>
      <%= link_to 'Sign in', sign_in_path %>
    <% end %>
  </footer>
  </body>
</html>
