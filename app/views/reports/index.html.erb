<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table class="table table-bordered table-sm, table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Course Num</th>
      <th>Faculty Name</th>
      <th>Criteria</th>
      <th>Max</th>
      <th>Min</th>
      <th>Mean</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.courseevaluation.course.Number %></td>
        <td><%= report.courseevaluation.faculty.full_name %></td>
        <td><%= report.courseevaluation.criterion.Title %></td>
        <td><%= report.max %></td>
        <td><%= report.min %></td>
        <td><%= report.mean %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

